{
    "interface_version": 2,
    "name": "MJS-一款用于放入链式脚本管理器提前加速游戏的软件",
    "description": "这是一个使用 MaaFramework 创建的新项目。",
    "contact": "QQ群: 无",
    "license": "MIT",
    "welcome": "首次使用！欢迎使用 MAA!",
    // 填写项目地址和版本号可实现自动更新功能
    "github": "https://github.com/miaojiuqing/MJS",
    "version": "0.0.1",
    "controller": [
        {
            "name": "安卓端",
            "type": "Adb",
            "display_short_side": 720 // 默认缩放分辨率的短边长度
        },
        {
            "name": "桌面端",
            "type": "Win32",
            "win32": {
                "class_regex": "雷神加速器",
                "window_regex": "Visual Studio",
                // 截图及控制方式，请根据项目实际情况修改
                // 文档: https://maafw.xyz/docs/2.4-ControlMethods
                "screencap": "GDI", // 截图方式
                "mouse": "Seize", // 鼠标控制方式
                "keyboard": "Seize" // 键盘控制方式
            }
        }
    ],
    "resource": [
        {
            "name": "Clash",
            "path": [
                "./resource/base",
                "./resource_Clash"
            ],
            "controller": [
                "安卓端"
            ]
        },
        {
            "name": "雷神加速器",
            "path": [
                "./resource/base",
                "./resource_LeiShen"
            ],
            "controller": [
                "桌面端"
            ]
        }
    ],
    "task": [
        {
            "name": "开始加速",
            "entry": "启动加速器到然后开始加速",
            "option": [
                "雷神加速游戏选择"
            ]
        },
        {
            "name": "停止加速",
            "entry": "停止加速后关闭加速器",
            "option": [
                "不停止加速直接关闭加速器"
            ]
        }
    ],
    "option": {
        "雷神加速游戏选择": {
            "type": "select",
            "cases": [
                {
                    "name": "边狱巴士",
                    "icon": "./resource/base/image/雷神/游戏图标/边狱巴士-常用点击进入.png",
                    "pipeline_override": {
                        "雷神加速器-已进入需要加速的游戏界面-开始加速": {
                            "recognition": {
                                "template": [
                                    "雷神/游戏图标/边狱巴士-已进入.png"
                                ]
                            }
                        },
                        "雷神加速器-点击进入需要加速的游戏界面-常用": {
                            "recognition": {
                                "template": [
                                    "雷神/游戏图标/边狱巴士-常用点击进入.png"
                                ]
                            }
                        },
                        "雷神加速器-点击进入需要加速的游戏界面-侧边栏": {
                            "recognition": {
                                "template": [
                                    "雷神/游戏图标/边狱巴士-侧边栏点击进入.png"
                                ]
                            }
                        }
                    }
                },
                {
                    "name": "卡厄斯梦境",
                    "icon": "./resource/base/image/雷神/游戏图标/卡厄斯梦境-常用点击进入.png",
                    "pipeline_override": {
                        "雷神加速器-已进入需要加速的游戏界面-开始加速": {
                            "recognition": {
                                "template": [
                                    "雷神/游戏图标/卡厄斯梦境-已进入.png"
                                ]
                            }
                        },
                        "雷神加速器-点击进入需要加速的游戏界面-常用": {
                            "recognition": {
                                "template": [
                                    "雷神/游戏图标/卡厄斯梦境-常用点击进入.png"
                                ]
                            }
                        },
                        "雷神加速器-点击进入需要加速的游戏界面-侧边栏": {
                            "recognition": {
                                "template": [
                                    "雷神/游戏图标/卡厄斯梦境-侧边栏点击进入.png"
                                ]
                            }
                        }
                    }
                }
            ]
        },
        "不停止加速直接关闭加速器": {
            "type": "switch",
            "cases": [
                {
                    "name": "Yes",
                    "pipeline_override": {
                        "停止加速后关闭加速器": {
                            "recognition": {
                                "type": "DirectHit"
                            }
                        }
                    }
                },
                {
                    "name": "No",
                    "pipeline_override": {}
                }
            ],
            "default_case": "No"
        }
    }
}